<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="280dp">

            </com.smarteist.autoimageslider.SliderLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUST"
                android:layout_marginTop="36dp"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:fontFamily="@string/bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_aust"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:fontFamily="@string/light">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departments"
                android:layout_marginTop="36dp"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:fontFamily="@string/bold">

            </TextView>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="16dp"
                android:foregroundGravity="center"
                android:clipToPadding="false"
                android:overScrollMode="never">

            </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Details"
                    android:layout_marginTop="36dp"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:fontFamily="@string/bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUST"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@string/light">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Love road, Tejgaon, Dhaka"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@string/light">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tel. (8802) 8870422"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@string/light">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email : info@aust.edu, regr@aust.edu"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@string/light">

                </TextView>

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/map">

                </ImageView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>